<div class="container d-flex flex-column align-items-center justify-content-center" style="min-height: 60vh;">
    <h1 class="display-4 mb-4 text-center">Добро пожаловать в MeetMe!</h1>
    
    <div class="card shadow-sm mb-4" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h5 class="card-title text-center mb-3">Быстрый доступ</h5>
            <form asp-controller="Event" asp-action="Details" method="get" class="mb-3">
                <div class="input-group">
                    <input type="text" 
                           name="code" 
                           class="form-control form-control-lg" 
                           placeholder="Введите код события"> 
                    <button type="submit" class="mx-2 btn btn-primary">Перейти</button>
                </div>
            </form>
            <div class="text-center">
                <small class="text-muted">Или выберите действие:</small>
            </div>
        </div>
    </div>

    <div class="d-flex flex-column flex-md-row gap-3">
        <a asp-controller="Event" asp-action="Create" class="btn btn-primary btn-lg px-4">
            <i class="bi bi-plus-circle me-2"></i>Создать событие
        </a>
        <a  asp-controller="Event" asp-action="Join" class="btn btn-outline-primary btn-lg px-4">
            <i class="bi bi-arrow-right-circle me-2"></i>Присоединиться
        </a>
    </div>
</div>